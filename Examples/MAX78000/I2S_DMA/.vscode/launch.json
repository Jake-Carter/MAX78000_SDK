{
    "configurations": [
        {
            "name": "GDB (Arm M4)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${config:program_file}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "linux": {
                "miDebuggerPath": "${config:MAXIM_PATH}/Tools/GNUTools/bin/arm-none-eabi-gdb"
            },
            "windows": {
                "miDebuggerPath": "${config:MAXIM_PATH}/Tools/GNUTools/bin/arm-none-eabi-gdb.exe"
            },
            "preLaunchTask": "build",
            "miDebuggerArgs": "",
            "setupCommands": [
                { "text":"cd ${workspaceFolder}" },
                { "text": "set architecture armv7e-m", "ignoreFailures": false },
                { "text": "target remote | openocd -c \"gdb_port pipe;log_output openocd.log\" -s ${config:MAXIM_PATH}/Tools/OpenOCD/scripts -f interface/${config:M4_OCD_interface_file} -f target/${config:M4_OCD_target_file}", "ignoreFailures": false },                               
                { "text":"exec-file build/${config:program_file}", "ignoreFailures": false },
                { "text":"symbol-file build/${config:symbol_file}", "ignoreFailures": false },
                { "text": "monitor reset halt", "ignoreFailures": false },
                { "text":"load", "ignoreFailures": false }
            ]
        },
        {
            "name": "GDB (RISC-V)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/buildrv/${config:program_file}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "linux": {
                "miDebuggerPath": "${config:MAXIM_PATH}/Tools/xPack/riscv-none-embed-gcc/bin/riscv-none-embed-gdb"
            },
            "windows": {
                "miDebuggerPath": "${config:MAXIM_PATH}/Tools/xPack/riscv-none-embed-gcc/bin/riscv-none-embed-gdb.exe"
            },
            "miDebuggerArgs": "",
            "setupCommands": [
                { "text":"cd ${workspaceFolder}" },
                { "text": "set architecture riscv:rv32", "ignoreFailures": false },          
                { "text":"exec-file build/${config:program_file}", "ignoreFailures": false },
                { "text":"symbol-file buildrv/${config:symbol_file}", "ignoreFailures": false },
                { "text": "target remote | openocd -c \"gdb_port pipe;log_output openocd.log\" -s ${config:MAXIM_PATH}/Tools/OpenOCD/scripts -f interface/ftdi/${config:RV_OCD_interface_file -f target/${config:RV_OCD_target_file}.cfg", "ignoreFailures": false },
                { "text": "monitor reset halt", "ignoreFailures": false },
                { "text": "set $pc=Reset_Handler","ignoreFailures": false }
            ]
        }
    ]
}